<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.vector.Solve_Process_1"
    android:id="@+id/relative_layout"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="আপনার গনিতঃ"
            android:id="@+id/problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vector_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/problem"
            android:layout_toRightOf="@+id/problem"
            android:layout_toEndOf="@+id/problem" />

        <TextView
            android:id="@+id/vector_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vector_a"
            android:layout_alignLeft="@+id/vector_a"
            android:layout_alignStart="@+id/vector_a" />

        <TextView
            android:text="আপনার সমাধানঃ"
            android:id="@+id/solve1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vector_b"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="সমাধান এখানে হবে"
            android:id="@+id/solve"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/vector_b"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </ScrollView>

</LinearLayout>
